{
    "title": "JSON schema for the sm2 configuration file",
    "$schema": "https://raw.githubusercontent.com/windyuuy/sourcemanager/main/design/sm2.schema.json",
    "type": "object",
    "fileMatch": ["sm2.json"],
    "properties": {
        "buildList": {
            "type": "array",
            "description": "构建列表",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "description": "一行记录",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "标志记录名,如果出现重名, 按照广度优先遍历"
                    },
                    "type": {
                        "type": "string",
                        "description": "构建类型",
                        "anyOf": [{
                            "enum": ["pre", "cmd"]
                        }]
                    },
                    "vcs": {
                        "type": "string",
                        "description": "预定义支持的版本控制系统",
                        "anyOf": [{
                            "enum": ["unknown", "folder", "svn", "git", "ccf", "oss"]
                        }]
                    },
                    "sourceUrl": {
                        "type": "string",
                        "description": "源链接"
                    },
                    "account": {
                        "type": "string",
                        "description": "账号"
                    },
                    "password": {
                        "type": "string",
                        "description": "密码"
                    },
                    "stages": {
                        "type": "array",
                        "description": "",
                        "items": {
                            "type": "object",
                            "properties": {
                                "stage": {
                                    "type": "string",
                                    "description": "构建阶段"
                                }
                            },
                            "description": "通过命令行形式覆盖构建阶段"
                        }
                    },
                    "uploadRoutes": {
                        "type": "array",
                        "description": "发布文件上传路由列表",
                        "items": {
                            "type": "object",
                            "properties": {
                                "fromFile": {
                                    "type": "string",
                                    "description": "待发布文件"
                                },
                                "fromFolder": {
                                    "type": "string",
                                    "description": "上传目录"
                                },
                                "toFile": {
                                    "type": "string",
                                    "description": "上传文件目标"
                                },
                                "toFolder": {
                                    "type": "string",
                                    "description": "上传目录目标"
                                }
                            },
                            "description": "克隆路由"
                        }
                    },
                    "cloneRoutes": {
                        "type": "array",
                        "description": "发布文件的克隆路由列表",
                        "items": {
                            "type": "object",
                            "properties": {
                                "fromFile": {
                                    "type": "string",
                                    "description": "待发布文件"
                                },
                                "fromFolder": {
                                    "type": "string",
                                    "description": "上传目录"
                                },
                                "toFile": {
                                    "type": "string",
                                    "description": "上传文件目标"
                                },
                                "toFolder": {
                                    "type": "string",
                                    "description": "上传目录目标"
                                }
                            },
                            "description": "克隆路由"
                        }
                    }
                }
            }
        }
    }
}